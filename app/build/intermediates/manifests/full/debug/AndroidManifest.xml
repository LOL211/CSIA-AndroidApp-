<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kushbanbah1.comsiia"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Welcome"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.kushbanbah1.comsiia.MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.kushbanbah1.comsiia.ClassHomeworkMenu"
            android:label="Homework Menu"
            android:parentActivityName="com.example.kushbanbah1.comsiia.MainMenu" />
        <activity
            android:name="com.example.kushbanbah1.comsiia.HomeworkClassView"
            android:label="Homework"
            android:parentActivityName="com.example.kushbanbah1.comsiia.ClassHomeworkMenu" />
        <activity
            android:name="com.example.kushbanbah1.comsiia.SchoolClassView"
            android:label="Class"
            android:parentActivityName="com.example.kushbanbah1.comsiia.ClassHomeworkMenu" />
        <activity
            android:name="com.example.kushbanbah1.comsiia.DayTaskView"
            android:label="Day Tasks"
            android:parentActivityName="com.example.kushbanbah1.comsiia.MainMenu" />
        <activity
            android:name="com.example.kushbanbah1.comsiia.AddEditHomework"
            android:parentActivityName="com.example.kushbanbah1.comsiia.HomeworkClassView" />
        <activity
            android:name="com.example.kushbanbah1.comsiia.AddEditSchoolClass"
            android:parentActivityName="com.example.kushbanbah1.comsiia.SchoolClassView" />

        <receiver android:name="com.example.kushbanbah1.comsiia.AlarmSetupSchoolClass" >
            <intent-filter>
                <action android:name="SETUPALRM" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.example.kushbanbah1.comsiia.NotificationSchooLClass" >
            <intent-filter>
                <action android:name="ALARM" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.example.kushbanbah1.comsiia.AddEditDayTasks"
            android:label="Day Tasks"
            android:parentActivityName="com.example.kushbanbah1.comsiia.DayTaskView" />

        <receiver android:name="com.example.kushbanbah1.comsiia.NotifDayTask" >
            <intent-filter>
                <action android:name="DAYALARM" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.example.kushbanbah1.comsiia.HelpPage"
            android:parentActivityName="com.example.kushbanbah1.comsiia.MainMenu" />
    </application>

</manifest>